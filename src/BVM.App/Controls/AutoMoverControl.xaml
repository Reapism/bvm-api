<UserControl x:Class="BVM.App.Controls.AutoMoverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BVM.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Wheat">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>
        <!-- First ROW -->
        <Grid Grid.Column="0" >
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Button MinHeight="18" Content="Tag Library"/>
                    <Button MinHeight="18" Content="Move Rules "/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button MinHeight="18" Content="Auto Tag"/>
                    <Button MinHeight="18" Content="hi"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Label Content="Title." />
        </Grid>
        <Grid Grid.Column="2" >

        </Grid>
        <!-- Second ROW -->
        <Grid Grid.Row="1" Grid.Column="0" >
            <StackPanel Orientation="Vertical">
                <Label Content="Operations on files here? Move / Auto Tag / etc. imagine ideal workflow" />
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox MinHeight="18" Content="Auto Tag"/>
                        <CheckBox MinHeight="18" Content="Auto Move"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox MinHeight="18" Content="Auto Tag"/>
                        <CheckBox MinHeight="18" Content="hi"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Label Content="Drag files here." /> 
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2" >
            <Label Content="File List here" />
        </Grid>
        <!-- Third ROW -->
        <Grid Grid.Row="2" Grid.Column="0" >
            <Label Content="Operations on files or here?." />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Label Content="progress/navigation." />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2" >

        </Grid>
    </Grid>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Palette Colors (left to right) -->
    <Color x:Key="Palette1Color">#FF264653</Color>
    <Color x:Key="Palette2Color">#FF2A9D8F</Color>
    <Color x:Key="Palette3Color">#FFE9C46A</Color>
    <Color x:Key="Palette4Color">#FFF4A261</Color>
    <Color x:Key="Palette5Color">#FFE76F51</Color>

    <!-- Brushes for Palette -->
    <SolidColorBrush x:Key="PrimaryBrush"   Color="{StaticResource Palette1Color}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Palette2Color}" />
    <SolidColorBrush x:Key="InfoBrush"      Color="{StaticResource Palette3Color}" />
    <SolidColorBrush x:Key="WarningBrush"   Color="{StaticResource Palette4Color}" />
    <SolidColorBrush x:Key="ErrorBrush"     Color="{StaticResource Palette5Color}" />

    <!-- Common UI Brushes -->
    <!-- Text -->
    <SolidColorBrush x:Key="DefaultTextBrush"  Color="{StaticResource Palette1Color}" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#FFAAAAAA" />

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="ControlBackgroundBrush"       Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ControlHoverBackgroundBrush"  Color="{StaticResource Palette3Color}" />
    <SolidColorBrush x:Key="ControlPressedBackgroundBrush" Color="{StaticResource Palette4Color}" />

    <!-- Borders & Focus -->
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource Palette2Color}" />
    <SolidColorBrush x:Key="FocusBorderBrush"   Color="{StaticResource Palette1Color}" />

</ResourceDictionary>
